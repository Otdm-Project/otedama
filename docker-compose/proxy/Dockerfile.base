FROM rust:1.80

# 必要なツールとライブラリをインストール
RUN apt update \ 
    && apt install -y \
        libssl-dev \
        pkg-config \
        build-essential \
    && apt clean \
    && mkdir -p /var/lib/haproxy && chmod 755 /var/lib/haproxy
# 作業ディレクトリを設定
WORKDIR /app

# Cargo.tomlとCargo.lockをコピー
COPY Cargo.toml ./

# ソースコードをコピー
COPY ./src ./src

# リリースビルド
RUN cargo build --release && \
# バイナリを /usr/local/bin にコピー
    cp target/release/proxyserver /usr/local/bin/proxyserver
